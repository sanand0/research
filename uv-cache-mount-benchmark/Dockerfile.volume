# Strategy 3: Volume mount (used at runtime)
FROM python:3.11-slim

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy project files
COPY pyproject.toml .

# Install dependencies - cache directory will be volume mounted
RUN UV_LINK_MODE=copy uv pip install --system -r pyproject.toml

CMD ["python", "--version"]
